{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/context_protector.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/commit_quality_enforcer.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/tdd_enforcer.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/openkanban_status.py",
            "timeout": 2
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/safe_permissions.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read|Glob|Grep",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/safe_permissions.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/plan_approved.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/openkanban_status.py",
            "timeout": 2
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/context_guardian.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/claudemd_health.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/openkanban_status.py",
            "timeout": 2
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/ultrawork_detector.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/openkanban_status.py",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/todo_enforcer.py",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/openkanban_status.py",
            "timeout": 2
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/plan_approved.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/context_monitor.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/edit_error_recovery.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/agent_usage_reminder.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/verification_reminder.py",
            "timeout": 5
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/precompact_context.py",
            "timeout": 10
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run --script ${CLAUDE_PLUGIN_ROOT}/hooks/subagent_quality_validator.py",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
