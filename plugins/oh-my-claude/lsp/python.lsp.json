{
  "command": "pyright-langserver",
  "args": ["--stdio"],
  "transport": "stdio",
  "extensionToLanguage": {
    ".py": "python",
    ".pyi": "python",
    ".pyw": "python"
  },
  "initializationOptions": {},
  "settings": {
    "python": {
      "analysis": {
        "autoSearchPaths": true,
        "useLibraryCodeForTypes": true,
        "diagnosticMode": "workspace"
      }
    }
  }
}
