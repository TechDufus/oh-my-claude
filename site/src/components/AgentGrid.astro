---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'

const agents = [
  {
    name: 'librarian',
    type: 'read',
    description: 'Smart file reading agent. Reads intelligently, summarizes large content, extracts relevant sections.',
    useCase: 'Reading large files, Git analysis, summarizing code',
  },
  {
    name: 'advisor',
    type: 'plan',
    description: 'Pre-planning gap analysis. Reviews requirements for hidden assumptions, missing context, and scope risks BEFORE plan generation.',
    useCase: 'Gap analysis before writing plans, catching scope risks',
  },
  {
    name: 'risk-assessor',
    type: 'assess',
    description: 'Proactive change-risk agent. Assesses functional, security, compatibility, performance, and operational risk for plans and diffs.',
    useCase: 'Non-trivial planning risk pass, PR/diff risk triage',
  },
  {
    name: 'critic',
    type: 'review',
    description: 'Critical plan reviewer. Reviews plans to find flaws, edge cases, problems BEFORE execution.',
    useCase: 'Reviewing implementation plans',
  },
  {
    name: 'validator',
    type: 'verify',
    description: 'Quality assurance agent. Runs tests, linters, type checks. Reports pass/fail with specific errors.',
    useCase: 'Running test suites, CI validation',
  },
  {
    name: 'code-reviewer',
    type: 'review',
    description: 'Post-implementation review agent. Reviews code against requirements and coding standards before merge.',
    useCase: 'Code review after implementation, quality checks before merge',
  },
  {
    name: 'security-auditor',
    type: 'audit',
    description: 'Security-focused code review. Finds OWASP vulnerabilities, hardcoded secrets, injection flaws, and analyzes dependency lock-files.',
    useCase: 'Security audits, pre-merge security review, dependency CVE analysis',
  },
]

const builtInAgents = [
  {
    name: 'Explore',
    type: 'search',
    description: 'Claude Code built-in. Finds files, locates definitions, maps dependencies. Automatic codebase reconnaissance.',
    useCase: 'File discovery, definition lookup, pattern matching',
  },
  {
    name: 'Plan',
    type: 'plan',
    description: 'Claude Code built-in. Structured planning mode with task decomposition and parallel execution strategies.',
    useCase: 'Multi-step implementations, complex workflows',
  },
  {
    name: 'Task',
    type: 'implement',
    description: 'Claude Code built-in. General-purpose implementation agent. Executes specific tasks completely.',
    useCase: 'Writing code, making edits, creating files',
  },
]

const typeColors: Record<string, 'coral' | 'cyan'> = {
  search: 'cyan',
  read: 'cyan',
  plan: 'coral',
  implement: 'coral',
  verify: 'cyan',
  assess: 'cyan',
  review: 'cyan',
  audit: 'cyan',
}
---

<section id="agents" class="py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl md:text-4xl font-heading font-bold text-center mb-4">
      Specialized <span class="text-cyan">Agents</span>
    </h2>
    <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
      7 custom agents that extend Claude Code's built-in capabilities. Your context window stays clean while they do the heavy lifting.
    </p>

    <!-- Custom Agents -->
    <h3 class="text-xl font-heading font-semibold mb-4 text-coral">Custom Agents</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
      {agents.map((agent) => (
        <div class="group">
          <Card className="h-full transition-all duration-300 hover:border-cyan/50 hover:shadow-[0_0_20px_rgba(0,229,204,0.1)]">
            <CardHeader className="pb-3">
              <div class="flex items-center justify-between mb-2">
                <CardTitle className="font-mono text-lg">{agent.name}</CardTitle>
                <Badge variant={typeColors[agent.type]}>{agent.type}</Badge>
              </div>
              <CardDescription className="text-sm leading-relaxed">
                {agent.description}
              </CardDescription>
            </CardHeader>
            <CardContent className="pt-0">
              <p class="text-xs text-muted-foreground">
                <span class="text-coral font-medium">Use:</span> {agent.useCase}
              </p>
            </CardContent>
          </Card>
        </div>
      ))}
    </div>

    <!-- Built-in Integration -->
    <h3 class="text-xl font-heading font-semibold mb-4 text-cyan">Built-in Integration</h3>
    <p class="text-muted-foreground mb-4 text-sm">oh-my-claude leverages Claude Code's native agents for common tasks:</p>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {builtInAgents.map((agent) => (
        <div class="group">
          <Card className="h-full transition-all duration-300 hover:border-coral/50 hover:shadow-[0_0_20px_rgba(218,119,86,0.1)] border-dashed">
            <CardHeader className="pb-3">
              <div class="flex items-center justify-between mb-2">
                <CardTitle className="font-mono text-lg">{agent.name}</CardTitle>
                <Badge variant={typeColors[agent.type]}>{agent.type}</Badge>
              </div>
              <CardDescription className="text-sm leading-relaxed">
                {agent.description}
              </CardDescription>
            </CardHeader>
            <CardContent className="pt-0">
              <p class="text-xs text-muted-foreground">
                <span class="text-coral font-medium">Use:</span> {agent.useCase}
              </p>
            </CardContent>
          </Card>
        </div>
      ))}
    </div>
  </div>
</section>
