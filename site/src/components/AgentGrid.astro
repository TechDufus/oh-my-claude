---
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'

const agents = [
  {
    name: 'scout',
    type: 'search',
    description: 'Quick reconnaissance agent. Finds files, locates definitions, checks existence. Returns locations, not content.',
    useCase: 'Finding files by pattern, locating function definitions',
  },
  {
    name: 'librarian',
    type: 'read',
    description: 'Smart file reading agent. Reads intelligently, summarizes large content, extracts relevant sections.',
    useCase: 'Reading large files, Git analysis, summarizing code',
  },
  {
    name: 'architect',
    type: 'plan',
    description: 'Task decomposition and planning. Breaks down complex tasks, identifies parallelization opportunities.',
    useCase: 'Planning multi-step implementations',
  },
  {
    name: 'worker',
    type: 'implement',
    description: 'Focused implementation agent. Executes ONE specific task completely. Does not decide - implements.',
    useCase: 'Writing code, making edits, creating files',
  },
  {
    name: 'validator',
    type: 'verify',
    description: 'Quality assurance agent. Runs tests, linters, type checks. Reports pass/fail with specific errors.',
    useCase: 'Running test suites, CI validation',
  },
  {
    name: 'scribe',
    type: 'document',
    description: 'Documentation agent. Writes clear documentation for code, APIs, systems. Understands before documenting.',
    useCase: 'Writing docs, API references, README files',
  },
  {
    name: 'orchestrator',
    type: 'coordinate',
    description: 'Coordination-only agent. Can read, search, delegate but CANNOT edit. Multi-agent orchestration.',
    useCase: 'Complex workflows with multiple agents',
  },
  {
    name: 'looker',
    type: 'visual',
    description: 'Visual content analyzer. Reads PDFs, images, screenshots. Extracts text, describes visuals.',
    useCase: 'Analyzing screenshots, reading diagrams',
  },
  {
    name: 'debugger',
    type: 'analyze',
    description: 'Strategic advisor for failure escalation. Call when stuck after 2+ failed attempts. Deep reasoning.',
    useCase: 'Debugging complex issues, root cause analysis',
  },
  {
    name: 'critic',
    type: 'review',
    description: 'Critical plan reviewer. Reviews plans to find flaws, edge cases, problems BEFORE execution.',
    useCase: 'Reviewing implementation plans',
  },
]

const typeColors: Record<string, 'coral' | 'cyan'> = {
  search: 'cyan',
  read: 'cyan',
  plan: 'coral',
  implement: 'coral',
  verify: 'cyan',
  document: 'coral',
  coordinate: 'coral',
  visual: 'cyan',
  analyze: 'coral',
  review: 'cyan',
}
---

<section id="agents" class="py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <h2 class="text-3xl md:text-4xl font-heading font-bold text-center mb-4">
      Specialized <span class="text-cyan">Agents</span>
    </h2>
    <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
      {agents.length} purpose-built agents that handle specific tasks. Your context window stays clean while they do the heavy lifting.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {agents.map((agent) => (
        <div class="group">
          <Card className="h-full transition-all duration-300 hover:border-cyan/50 hover:shadow-[0_0_20px_rgba(0,229,204,0.1)]">
            <CardHeader className="pb-3">
              <div class="flex items-center justify-between mb-2">
                <CardTitle className="font-mono text-lg">{agent.name}</CardTitle>
                <Badge variant={typeColors[agent.type]}>{agent.type}</Badge>
              </div>
              <CardDescription className="text-sm leading-relaxed">
                {agent.description}
              </CardDescription>
            </CardHeader>
            <CardContent className="pt-0">
              <p class="text-xs text-muted-foreground">
                <span class="text-coral font-medium">Use:</span> {agent.useCase}
              </p>
            </CardContent>
          </Card>
        </div>
      ))}
    </div>
  </div>
</section>
